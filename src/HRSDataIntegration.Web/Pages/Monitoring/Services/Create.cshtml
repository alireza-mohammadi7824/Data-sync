@page "/Monitoring/Services/Create"
@model HRSDataIntegration.Web.Pages.Monitoring.Services.CreateModel
@using HRSDataIntegration.Localization
@using HRSDataIntegration.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<HRSDataIntegrationResource> L

@{
    ViewBag.PageTitle = L["Monitoring:CreateServiceTitle"];
    PageLayout.Content.MenuItemName = HRSDataIntegrationMenus.Monitoring;
}

<abp-breadcrumb>
    <abp-breadcrumb-item href="~/Monitoring">@L["Monitoring:Title"]</abp-breadcrumb-item>
    <abp-breadcrumb-item>@L["Monitoring:CreateService"]</abp-breadcrumb-item>
</abp-breadcrumb>

<div class="monitoring-service-create container-fluid px-0">
    <div class="card shadow-sm">
        <div class="card-body p-4 p-xl-5">
            <h4 class="fw-semibold mb-2">@L["Monitoring:CreateServiceHeading"]</h4>
            <p class="text-muted mb-4">@L["Monitoring:CreateServiceDescription"]</p>

            <form method="post" class="monitoring-service-form" novalidate>
                <abp-validation-summary />
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <abp-input asp-for="Service.Name" label="@L[\"Monitoring:Fields.Name\"]" />
                    </div>
                    <div class="col-12 col-md-6">
                        <abp-input asp-for="Service.IsActive" label="@L[\"Monitoring:Fields.IsActive\"]" />
                    </div>
                    <div class="col-12">
                        <abp-textarea asp-for="Service.Description" label="@L[\"Monitoring:Fields.Description\"]" rows="4" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a class="btn btn-outline-secondary" href="~/Monitoring">@L["Monitoring:Cancel"]</a>
                    <button type="submit" class="btn btn-primary">@L["Monitoring:Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
